<!DOCTYPE html>
<html>
    <head>
        <title>YelpCamp</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
	<style>
		.column{
		margin-left:50px;
		}
		.p1{
			color:teal;
			font-size:20px;
		}
	</style>
    <body>
		<h1>All notifications </h1>
		<a href="/pastnotification">View past notifications</a>
	<div class="row">
		<% notification.forEach(function(notification){ %>
			<div class="column">
				<p class="p1"> <%= notification.pprice %> </p>
				<p> <%= notification.stock %> (in stock) </p>
				<p> Shopkeeper name: <%= notification.shopkeeper.username %>  </p>
				<!-- <form action="/user/< notification.userid %>/usernotificationid/< notification.usernotificationid %>" method="POST">
					<input type="number" name="prprice" placeholder="enter your price">
					<input type="number" name="stock" placeholder="enter the quantity in stock">
					<button class="btn btn-primary">submit</button>
				</form> -->	
		</div>
		<br>
		<% }) %>
	</div>

	</body>
</html>